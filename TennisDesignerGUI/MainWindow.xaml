<Window x:Class="TennisDesignerGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tennis Designer" Height="650" Width="900" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="Resources/windowBackground.jpeg"></ImageBrush>
    </Window.Background>

    <Grid>
        <TabControl HorizontalAlignment="Left" Height="465" Margin="255,44,0,0" VerticalAlignment="Top" Width="570" Foreground="#FF595353">
            <TabItem Header="Edit" Foreground="#FF595353">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <!--Work Space-->
                <Canvas x:Name="canvasEdit" Margin="7,11,9,11" AllowDrop="True">
                    <Ellipse MouseMove="MouseMoveEllipse" Fill="#FF1E87AE" HorizontalAlignment="Left" Height="26" Stroke="Black" StrokeThickness="4" VerticalAlignment="Top" Width="24" RenderTransformOrigin="3,3.333" Canvas.Left="277" Canvas.Top="93"/>
                    <Ellipse MouseMove="MouseMoveEllipse" Fill="#FF1E87AE" HorizontalAlignment="Left" Height="26" Stroke="Black" StrokeThickness="4" VerticalAlignment="Top" Width="24" RenderTransformOrigin="3,3.333" Canvas.Left="441" Canvas.Top="240"/>
                    <Ellipse MouseMove="MouseMoveEllipse" Fill="#FF1E87AE" HorizontalAlignment="Left" Height="26" Stroke="Black" StrokeThickness="4" VerticalAlignment="Top" Width="23" RenderTransformOrigin="3,3.333" Canvas.Left="382" Canvas.Top="150"/>
                    <Ellipse MouseMove="MouseMoveEllipse" Fill="#FF1E87AE" HorizontalAlignment="Left" Height="26" Stroke="Black" StrokeThickness="4" VerticalAlignment="Top" Width="24" RenderTransformOrigin="3,3.333" Canvas.Left="81" Canvas.Top="93"/>
                    <Ellipse MouseMove="MouseMoveEllipse" Fill="#FF1E87AE" HorizontalAlignment="Left" Height="25" Stroke="Black" StrokeThickness="4" VerticalAlignment="Top" Width="24" RenderTransformOrigin="3,3.333" Canvas.Left="81" Canvas.Top="240"/>
                    <Path Stroke="Black" StrokeThickness="1"  Stretch="Fill" Canvas.Left="12" Canvas.Top="114"   >
                        <Path.Data>
                            <PathGeometry>
                                <PathGeometry.Figures>
                                    <PathFigure StartPoint="50,250">
                                        <PathFigure.Segments>
                                            <ArcSegment Size="50,25" RotationAngle="0" IsLargeArc="True" SweepDirection="Clockwise" Point="100,150" />
                                            <LineSegment Point="400,100" />
                                            <ArcSegment
                                              Size="50,50" RotationAngle="45"
                                              IsLargeArc="True" SweepDirection="Clockwise"
                                              Point="200,100"/>
                                        </PathFigure.Segments>
                                    </PathFigure>
                                </PathGeometry.Figures>
                            </PathGeometry>
                        </Path.Data>
                    </Path>


                </Canvas>
            </TabItem>

            <TabItem Header="Arcade Mode" Foreground="#FF595353">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
            </TabItem>

            <TabItem Header="Fire Mode" Foreground="#FF595353">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
            </TabItem>

        </TabControl>
        <!--Designs Panel-->
        <GroupBox Header="Designs" HorizontalAlignment="Left" Height="325" Margin="10,30,0,0" VerticalAlignment="Top" Width="215" FontWeight="Bold" Foreground="White"/>
        <ListBox x:Name="ListBoxDesigns" HorizontalAlignment="Left" Height="250" Margin="25,60,0,0" VerticalAlignment="Top" Width="185" Foreground="#FF595353"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="165,325,0,0" VerticalAlignment="Top" Width="45" Foreground="#FF595353">
            <Button.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF0F0F0" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <!--Properties Panel-->
        <GroupBox Header="Properties" HorizontalAlignment="Left" Margin="10,375,0,0" VerticalAlignment="Top" Height="220" Width="215" Foreground="White" FontWeight="Bold"/>
        <ListBox x:Name="ListBoxProperties" HorizontalAlignment="Left" Height="176" Margin="25,404,0,0" VerticalAlignment="Top" Width="185" Foreground="#FF595353"/>

    </Grid>
</Window>
