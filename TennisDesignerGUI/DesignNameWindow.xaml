<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="TennisDesignerGUI.DesignNameWindow"
        Title="TennisDesigner" Height="181" Width="269" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Background="White">
    <Grid Margin="0,0,4,16">
        <TextBox x:Name="nameTextBox" HorizontalAlignment="Left" Height="23" Margin="39,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="176"/>
        <Button x:Name="confirmNameButton" Content="Accept" HorizontalAlignment="Left" Margin="91,106,0,0" VerticalAlignment="Top" Width="75" Click="confirmNameButton_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF0F0F0" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Label Content="Please enter a name for your design:" HorizontalAlignment="Center" Margin="25,21,10,0" VerticalAlignment="Top" Foreground="#FF595353" Width="224"/>


    </Grid>
</Window>
